<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ThirtySecs.Setup">

    <ContentPage.Content>
        <StackLayout
            BackgroundColor="#8da7c6">
            <StackLayout
                VerticalOptions="CenterAndExpand"
                Padding="50, 0">

                <Label
                    Text="New Game"
                    
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Margin="0, 0, 0, 50"
                    
                    TextColor="White"
                    FontSize="45"/>


                <StackLayout
                    VerticalOptions="Center"
                    HorizontalOptions="FillAndExpand">

                    <Label
                        Text="Difficulty"
                    
                        HorizontalOptions="Start"
                        VerticalOptions="Start"
                        
                        TextColor="White"
                        FontSize="20"/>

                    <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                        <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand">
                            <Button
                                Text="Easy"
                        
                                BackgroundColor="#3c80d1"
                            />
                        </StackLayout>
                        <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand">
                            <Button
                                Text="Normal"
                        
                                BackgroundColor="#3c80d1"
                            />
                        </StackLayout>
                        <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand">
                            <Button
                                Text="Hard"
                            
                                BackgroundColor="#3c80d1"
                            />
                        </StackLayout>
                    </StackLayout>
                </StackLayout>

                <StackLayout
                    VerticalOptions="Center"
                    HorizontalOptions="FillAndExpand">

                    <Label
                        Text="Finish (words)"
                    
                        HorizontalOptions="Start"
                        VerticalOptions="Start"
                    
                        TextColor="White"
                        FontSize="20"/>

                    <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                        <Slider 
                            Maximum="100"
                            Minimum="10"
                            Value="30"
                            HorizontalOptions="FillAndExpand"
                            
                            ThumbColor="White"/>
                        
                        <Label Text="30" TextColor="White" FontSize="18"/>
                    </StackLayout>
                </StackLayout>

                <StackLayout
                    VerticalOptions="Center"
                    HorizontalOptions="FillAndExpand">

                    <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                        <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand">
                            <Button
                                Text="Back"
                                
                                BackgroundColor="OrangeRed"/>
                        </StackLayout>
                        <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand">
                            <Button
                                Text="Start Game"
                                
                                BackgroundColor="#3c80d1"/>
                        </StackLayout>
                    </StackLayout>
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>